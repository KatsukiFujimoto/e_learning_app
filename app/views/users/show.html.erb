<div class="row">
  <aside class="col-md-4 user-sidebar">
    <section class="user_info">
      <h1 id="user_show">
        <p><%= gravatar_for @user %></p>
        <p class="user-name"><%= @user.name %></p>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <p class="categories-learned"><%= pluralize(@category_count, "category") %> learned</p>
      <p class="words-learned"><%= pluralize(@word_count, "word") %> learned</p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <%= will_paginate @activities %>
    <div class="activity-container">
      <h2 class="margin-top-zero">Activities</h2>
      <%= render partial: 'users/activity', collection: @activities %>
    </div>
    <%= will_paginate @activities %>
  </div>
</div>